<launch>
    <arg name="world_file" default="$(find cas_simulator)/worlds/cas_simulator_map.sdf"/>
  
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="use_sim_time" value="true"/>
      <arg name="debug" value="false "/>  <!-- false for real training, true for debugging -->
      <arg name="paused" value="false"/>
      <arg name="gui" value="true" />
      <arg name="world_name" value="$(arg world_file)"/>
      <arg name="verbose" value="true"/>
      <arg name="recording" value="false"/>
    </include>

    <node name="spawn_robot_model" pkg="gazebo_ros" type="spawn_model" args="-sdf -file $(find stingray_sim)/models/triton_lidar/model.sdf -model triton_lidar -x 0 -y 0 -z 0 -R 0 -P 0 -Y 0" respawn="false" output="screen" />
  
</launch>
